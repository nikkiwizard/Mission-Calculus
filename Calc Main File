import time
import sys
import replit

def delay_print(s):
    for c in s:
        sys.stdout.write(c)
        sys.stdout.flush()
        time.sleep(0.235)

def choose():
  while True:
    choice = input("> ")
    if choice != correct_choice:
      print("Try Again")
    else:
      break

delay_print("Welcome Agent \n")
